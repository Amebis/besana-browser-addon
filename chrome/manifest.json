{
  "manifest_version": 2,
  "name": "LanguageTool",
  "short_name": "LanguageTool",
  "version": "0.8.1",

  "description": "Style and grammar checking for Chrome",
  "icons": { "16": "images/icon16.png",
             "48": "images/icon48.png",
             "128": "images/icon128.png" },
  "author": "Daniel Naber",
  "homepage_url": "https://languagetool.org/",
  "offline_enabled": false,

  "browser_action": {
    "default_icon": "images/icon48.png",
    "default_popup": "popup.html",
    "default_title": "Check the current selection\nor text field with LanguageTool"
  },
  "permissions": [
    "activeTab",
    "https://languagetool.org:8081/"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentscript.js"]
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      }
    }
  }
}